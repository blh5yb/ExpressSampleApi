{
  "name": "DemoRestApi",
  "author": "Barry Hykes Jr",
  "version": "1.0.0",
  "description": "Demo Rest Api with Mongo Db",
  "main": "src/index.mjs",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "start": "node src/index.mjs"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.(m)js?(x)",
      "**/?(*).(spec|test).(m)js?(x)"
    ],
    "transform": {
      "^.+\\.(m?js)$": "babel-jest"
    }
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.4",
    "nodemailer": "^6.9.16",
    "parameter-validator": "^1.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.1.0",
    "@jest/globals": "^29.7.0",
    "@types/chai": "^5.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mockingoose": "^2.16.2",
    "mongodb-memory-server": "^10.1.3",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3"
  }
}
